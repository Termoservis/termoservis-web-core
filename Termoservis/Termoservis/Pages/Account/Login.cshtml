@page
@model LoginModel

@{
    ViewData["Title"] = "Prijava";
}

<h1 class="pt-3">@ViewData["Title"]</h1>
<div class="row">
    <div class="col">
        <section>
            <form method="post">
                <div class="row">
                    <div asp-validation-summary="All" class="text-danger col-sm-10 ml-auto px-0"></div>
                </div>
                <div class="form-group row">
                    <label asp-for="Input.Email" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Input.Email" class="form-control" placeholder="@Html.DisplayNameFor(m => Model.Input.Email)"/>
                    </div>
                <div class="col-sm-10 ml-auto">
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Input.Password" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Input.Password" class="form-control" placeholder="@Html.DisplayNameFor(m => Model.Input.Password)"/>
                    </div>
                    <div class="col-sm-10 ml-auto">
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="ml-auto col-10">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe"/>
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="ml-auto col-sm-10">
                        <button type="submit" class="btn btn-outline-primary px-4">Prijava</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>
