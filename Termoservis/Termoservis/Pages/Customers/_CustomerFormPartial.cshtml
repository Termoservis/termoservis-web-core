@using Termoservis.Helpers
@using Termoservis.Models
@model Termoservis.Pages.Customers.CreateModel
    
<div class="row">
    <div class="col-sm">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" id="create-customer-form">
            <div class="row">
                <div asp-validation-summary="All" class="text-danger col-sm-12 px-0"></div>
            </div>
            <div class="row">
                <div class="col-sm">
                    
                    <!-- Name -->
                    <div class="row form-group">
                        <label asp-for="Input.Name" class="col-2 col-form-label"></label>
                        <div class="col-10">
                            <input asp-for="Input.Name" class="form-control" autofocus="autofocus" tabindex="1"/>
                        </div>
                        <div class="col-sm-10 ml-auto">
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <!--  Note  -->
                    <div class="row form-group">
                        <label asp-for="Input.Note" class="col-2 col-form-label"></label>
                        <div class="col-10">
                            <textarea asp-for="Input.Note" class="form-control" tabindex="1" rows="3"></textarea>
                        </div>
                        <div class="col-sm-10 ml-auto">
                            <span asp-validation-for="Input.Note" class="text-danger"></span>
                        </div>
                    </div>

                </div>
                <div class="col-sm">
                    
                    <!-- Street -->
                    <div class="row form-group">
                        <label asp-for="Input.Address.StreetName" class="col-2 col-form-label"></label>
                        <div class="col-10">
                            <input asp-for="Input.Address.StreetName" class="form-control" tabindex="2"/>
                        </div>
                        <div class="col-sm-10 ml-auto">
                            <span asp-validation-for="Input.Address.StreetName" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Place -->
                    <div class="row form-group">
                        <label asp-for="Input.Address.PlaceId" class="col-2 col-form-label"></label>
                        <div class="col-10">
                            <select asp-for="Input.Address.PlaceId" class="form-control select2-init" tabindex="3">
                            </select>
                        </div>
                        <div class="col-sm-10 ml-auto">
                            <span asp-validation-for="Input.Address.PlaceId" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Country -->
                    <div class="row form-group">
                        <label asp-for="Input.Address.CountryId" class="col-2 col-form-label"></label>
                        <div class="col-10">
                            <select asp-for="Input.Address.CountryId" asp-items="@(new SelectList(Model.AvailableCountries, "Id", "Name"))" class="form-control" tabindex="1"></select>
                        </div>
                        <div class="col-sm-10 ml-auto">
                            <span asp-validation-for="Input.Address.CountryId" class="text-danger"></span>
                        </div>
                    </div>

                </div>
            </div>
            
            <div class="row">
                <div class="col-sm-6">
                    <div class="row">
                        <h5 class="col pb-1">Kontakt podaci</h5>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Input.TelephoneNumbers" class="col-2 col-form-label"></label>
                        <div class="col-sm-10" id="telephoneNumbers">

                        </div>
                        <div class="col-sm-10 ml-auto">
                            <a href="#" id="telephoneNumbersAdd">Dodaj broj...</a>
                        </div>
                    </div>

                    <!-- Country -->
                    <div class="row form-group">
                        <label asp-for="Input.Email" class="col-2 col-form-label"></label>
                        <div class="col-10">
                            <input asp-for="Input.Email" class="form-control" tabindex="1" />
                        </div>
                        <div class="col-sm-10 ml-auto">
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            
            <hr />
            
            <div class="form-group row">
                <div class="offset-sm-1 col-sm-11">
                    <p>
                        @if ("Create" == "Create")
                        {
                            <button class="btn btn-primary" click="$(this).closest('form').submit()">
                                <i class="fa fa-floppy-o" aria-hidden="true"></i>
                                <span>&nbsp;Kreiraj</span>
                            </button>
                        }
                        else
                        {
                            <button class="btn btn-primary" click="$(this).closest('form').submit()">
                                <i class="fa fa-floppy-o" aria-hidden="true"></i>
                                <span>&nbsp;Uredi</span>
                            </button>
                        }
                        <input type="submit" value="Submit" hidden="hidden" />
                    </p>
                </div>
            </div>
        </form>
    </div>
</div>
